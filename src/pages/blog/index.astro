---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts and sort by date (newest first)
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout
  title="Blog - T-001v2r3"
  description="Read my latest blog posts about technology, development, and more."
>
  <div class="bg-white dark:bg-gray-900 py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-white mb-4">
          Blog
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          Thoughts, ideas, and experiences from my journey
        </p>
      </div>

      <!-- Blog Posts Grid -->
      {sortedPosts.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-gray-600 dark:text-gray-400 text-lg">
            No blog posts yet. Check back soon!
          </p>
        </div>
      ) : (
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {sortedPosts.map((post) => (
            <article class="bg-gray-50 dark:bg-gray-800 rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 border border-gray-200 dark:border-gray-700 flex flex-col">
              <a href={`/blog/${post.slug}`} class="block flex-grow">
                {post.data.coverImage && (
                  <img
                    src={post.data.coverImage}
                    alt={post.data.title}
                    class="w-full h-48 object-cover"
                    loading="lazy"
                  />
                )}
                <div class="p-6 flex flex-col h-full">
                  <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-3">
                    <time datetime={post.data.date.toISOString()}>
                      {post.data.date.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </time>
                  </div>
                  
                  <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                    {post.data.title}
                  </h2>
                  
                  <p class="text-gray-600 dark:text-gray-300 mb-4 flex-grow">
                    {post.data.description}
                  </p>
                  
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mt-auto">
                      {post.data.tags.map((tag) => (
                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-800 dark:text-primary-300">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </a>
            </article>
          ))}
        </div>
      )}

      <!-- RSS Feed Link -->
      <div class="mt-12 text-center">
        <a
          href="/rss.xml"
          class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>
          </svg>
          Subscribe via RSS
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
